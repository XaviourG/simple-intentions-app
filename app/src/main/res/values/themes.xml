<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleIntentions" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sage</item>
        <item name="colorPrimaryDark">@color/dark_sage</item>
        <item name="colorPrimaryVariant">@color/dark_sage</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sage</item>
        <item name="android:colorSecondary">@color/water</item>
        <item name="colorSecondaryVariant">@color/dark_water</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Background color. -->
        <item name="android:colorBackground">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?android:colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/off_white</item>
        <item name="android:textColorTertiary">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorOnBackground">@color/off_white</item>
    </style>

    <style name="Theme.SimpleIntentions.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <item name="appWidgetRadius">8dp</item>
        <item name="appWidgetPadding">4dp</item>
        <item name="appWidgetInnerRadius">4dp</item>
    </style>

    <style name="Theme.SimpleIntentions.AppWidgetContainer" parent="Theme.SimpleIntentions.AppWidgetContainerParent" />
</resources>